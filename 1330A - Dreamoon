#include <iostream>
int
main (){
    int t,n,x,v;
    std:: cin >>t;
    while(t--){
        std::cin >>n>>x;
        int A[220]={0};
        for (int i =0;i<n;i++) {
            int a;
            std::cin >>a;
            A[a]=1;
            
        }
        for (v=1; x> 0 || A[v]!=0;v++){
            if (A[v]==0){
                x --;
            }
        }
    }
    std::cout<<v-1;
}
